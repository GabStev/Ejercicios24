<?php // Ejercicio Nº 2

function serie2($x=26,$y=3)
 {
           $contador=0;
           $result=$x;
           $i=1;
           if(($x>255 ||  $x<0  ) || ($y>255 || $y<0))
           {
               echo"</br>". -1;
           }
              else {
                      do  {
                            $result=$result*$i;
                           $contador=$contador+1;
                           $i++;
                           }
                    while($contador!=$y);
                     echo"</br>".$result;
              }                                
    }
    
echo serie2();

