        for($i=0;$i<$nelementos-1; $i++){
            //echo $numeros[$i];
                    $suma+=$numeros[$i];
        }
        //echo "suma es:". $suma;
        for($j=count($numeros)-1;$j>$nelementos; $j--){
                    $sumaMayores+=$numeros[$j];
        }
        //echo "suma es:". $sumaMayores;
        
        if($suma==$sumaMayores){
            echo $i;
            echo "<hr>\n";
        }
}
