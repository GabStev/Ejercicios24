function EjerQuince(array $numeros){
    $nelementos=  count($numeros);
    $suma=0;
    $result=$numeros[1];
    
        for($i=0;$i<$nelementos; $i++){
                //echo $numeros[$i];
                $suma+=$numeros[$i];
                //
                //
                //echo $suma;
               
                if($numeros[$i]>$suma)
                    $result=$numeros[$i];
                else {
                    if($suma>$result)
                    $result=$suma;
                    
                }
                              
            
    }
    echo $result;
}

EjerQuince( [4, -3, 7, 2, 4, -5, 1, 2] );
?>
<?php //Ejercicio 10

$x = 5;
$varaux = 0;
$y = 7;
$resultado = -1;
$noencontrado = 1;
if ($x > $y)
{
    $varaux = $x;
    $x = $y;
    $y = $varaux;
}
for ($i = $x; $i <= $y; $i++)
{
    $sum = 1;
    $n = $i;
    if ($noencontrado == 1) { 
        for ($compt = 2; $compt * $compt <= $n; $compt++)
        {
            if ($compt * $compt == $n)
            {
                $sum = $sum + $compt;
            }
            else if ($n % $compt == 0)
            {
                $sum = $sum + $compt;
                $sum = $sum + $n / $compt;
            }
        }
        if (($sum == $n) & ($n != 0) & ($n != 1))
        { 
            echo("El menor numero perfecto encontrado es: ".$n);
            $noencontrado = 0;
        }
    }         
}
if ($noencontrado == 1)
{
    echo "No se encontro numero perfecto, por lo tanto el resultado es: ".$resultado;
}
?>
<?php //Ejercicio Nº 16

$x = 3;
$y = 1;
$z = 3;
$resultado = -1;
$multiplicador = 2;
if ($y > $z)
{
    $resultado = 0;
    if ($x > 255 || $y > 255 || $z > 255 || $x <= 0 || $y <= 0 || $z <= 0)
    {
        $resultado = -1;
    }
}
else
{
    if ($x > 255 || $y > 255 || $z > 255 || $x <= 0 || $y <= 0 || $z <= 0)
    {
        $resultado = -1;
    }
    else
    {
        for ($i = 1; $i <= $z; $i++)
        {
            if ($i == $y)
            {
                $resultado = $x;
            }
            else
            {
                $x = $x * $multiplicador;
                $multiplicador = $multiplicador + 2;
                $resultado = $resultado + $x;
            }
        }
    }
}
echo "El resultado de la suma es ".$resultado;
